CREATE VIEW trial_balance_daily AS SELECT `Tenant`, `transactiondate`, SUM(`mpesa_dr`) AS mpesa_dr, SUM(`mpesa_cr`) AS mpesa_cr, SUM(`cash_dr`) as cash_dr, SUM(`cash_cr`) as cash_cr, SUM(`bank_dr`) as bank_dr, SUM(`bank_cr`) as bank_cr, SUM(`loans_dr`) as loans_dr, SUM(`loans_cr`) as loans_cr, SUM(`borrowings_dr`) AS borrowings_dr, SUM(`borrowings_cr`) as borrowings_cr, SUM(`share_prem_dr`) as share_prem_dr, SUM(`share_prem_cr`) as share_prem_cr, SUM(`property_plant_eqpt_dr`) as property_plant_eqpt_dr, SUM(`property_plant_eqpt_cr`) as property_plant_eqpt_cr, SUM(`cbo_reserve_dr`) as cbo_reserve_dr, SUM(`cbo_reserve_cr`) as cbo_reserve_cr, SUM(`revenue_reserve_dr`) as revenue_reserve_dr, SUM(`revenue_reserve_cr`) as revenue_reserve_cr, SUM(`ashes_shares_dr`) as ashes_shares_dr, SUM(`ashes_shares_cr`) AS ashes_shares_cr, SUM(`ashes_cooperate_dr`) as ashes_cooperate_dr, SUM(`ashes_cooperate_cr`) as ashes_cooperate_cr, SUM(`aswap_shares_dr`) as aswap_shares_dr, SUM(`aswap_shares_cr`) as aswap_shares_cr, SUM(`aswap_member_welfare_contrib_dr`) as aswap_member_welfare_contrib_dr, SUM(`aswap_member_welfare_contrib_cr`) as aswap_member_welfare_contrib_cr, SUM(`aswap_cooperate_dr`) as aswap_cooperate_dr, SUM(`aswap_cooperate_cr`) as aswap_cooperate_cr, SUM(`indiv_savings_dr`) as indiv_savings_dr, SUM(`indiv_savings_cr`) as indiv_savings_cr, SUM(`voluntary_savings_dr`) as voluntary_savings_dr, SUM(`voluntary_savings_cr`) as voluntary_savings_cr, SUM(`group_savings_dr`) as group_savings_dr, SUM(`group_savings_cr`) as group_savings_cr, SUM(`compulsory_savings_dr`) as compulsory_savings_dr, SUM(`compulsory_savings_cr`) as compulsory_savings_cr, SUM(`fixed_savings_dr`) as fixed_savings_dr, SUM(`fixed_savings_cr`) as fixed_savings_cr, SUM(`shares_dr`) as shares_dr, SUM(`shares_cr`) as shares_cr, SUM(`building_shares_dr`) as building_shares_dr, SUM(`building_shares_cr`) as building_shares_cr, SUM(`income_cr`) as income_cr, SUM(`income_dr`) as income_dr, SUM(`loan_insur_fund_dr`) as loan_insur_fund_dr, SUM(`loan_insur_fund_cr`) as loan_insur_fund_cr, SUM(`expenditure_dr`) as expenditure_dr, SUM(`expenditure_cr`) as expenditure_cr, SUM(`dividends_dr`) as dividends_dr, SUM(`dividends_cr`) as dividends_cr, SUM(`supplier_dr`) as supplier_dr, SUM(`supplier_cr`) as supplier_cr, SUM(`Cash_Incustody_dr`) as Cash_Incustody_dr, SUM(`Cash_Incustody_cr`) as Cash_Incustody_cr, SUM(`fixed_asset_dr`) as fixed_asset_dr, SUM(`fixed_asset_cr`) as fixed_asset_cr, SUM(`Current_Asset_dr`) as Current_Asset_dr, SUM(`Current_Asset_cr`) as Current_Asset_cr, SUM(`Debtor_dr`) as Debtor_dr, SUM(`Debtor_cr`) as Debtor_cr, SUM(`Suspense_dr`) as Suspense_dr, SUM(`Suspense_cr`) as Suspense_cr, SUM(`Cash_in_Safe_dr`) as Cash_in_Safe_dr, SUM(`Cash_in_Safe_cr`) as Cash_in_Safe_cr, SUM(`Provision_dr`) as Provision_dr, SUM(`Provision_cr`) as Provision_cr FROM ledgers GROUP BY tenant, transactiondate

-- end view 